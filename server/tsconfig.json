{
  "include": ["./**/*"],
  "exclude": [
    "node_modules",
    "../client",
    "../shared",
    "build",
    "dist",
    "vite.ts",
    "../vite.config.ts",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["node", "express"],
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  }
} 